<?xml version="1.0" encoding="utf-8"?>

<wf:watch-face-format xmlns:wf="http://schemas.android.com/apk/res-auto/watchface"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <wf:metadata
        android:name="KnightWorld Tactical"
        android:description="A tactical dossier with soldier stats, mission map, and digital time." />

    <wf:palette>
        <wf:color wf:id="background" android:color="#FF0D111A" />
        <wf:color wf:id="surface" android:color="#FF1A2333" />
        <wf:color wf:id="primary" android:color="#FF4CAF50" />
        <wf:color wf:id="onSurface" android:color="#FFE8EDF6" />
        <wf:color wf:id="onSurfaceMuted" android:color="#FF7A879F" />
        <wf:color wf:id="accent" android:color="#FF00BCD4" />
    </wf:palette>
</wf:watch-face-format>

<wf:watch-face
    xmlns:wf="http://schemas.android.com/apk/res-auto/watchface">

    <wf:metadata
        wf:identifier="knight_world"
        wf:name="@string/app_name"
        wf:description="@string/watch_face_description"
        wf:category="digital" />

    <wf:rendering-parameters
        wf:screen-width="480"
        wf:screen-height="480"
        wf:shape="round" />

    <wf:color-palette>
        <wf:color wf:id="background" wf:value="#10131F" />
        <wf:color wf:id="surface" wf:value="#182238" />
        <wf:color wf:id="primary" wf:value="#7BC4FF" />
        <wf:color wf:id="primaryVariant" wf:value="#9ED6FF" />
        <wf:color wf:id="accent" wf:value="#F8C547" />
        <wf:color wf:id="onPrimary" wf:value="#06152B" />
        <wf:color wf:id="onSurface" wf:value="#E5E9F1" />
        <wf:color wf:id="onSurfaceMuted" wf:value="#9AA4B3" />
    </wf:color-palette>

    <wf:images>
        <wf:image wf:id="map" wf:resource="@drawable/bg_tactical_map" />
    </wf:images>

    <wf:layout>
        <wf:box
            wf:id="root"
            wf:width="match_parent"
            wf:height="match_parent"
            wf:horizontal-alignment="center"
            wf:vertical-alignment="center">

            <wf:fill wf:color="@wf:color/background" />

            <wf:image
                wf:id="map"
                wf:image="@wf:image/map"
                wf:width="240dp"
                wf:height="150dp"
                wf:anchor="center"
                wf:x="0.5"
                wf:y="0.58"
                wf:tint-color="@wf:color/surface"
                wf:corner-radius="18dp" />

            <wf:text
                wf:id="time"
                wf:x="0.5"
                wf:y="0.28"
                wf:anchor="center"
                wf:text-size="54sp"
                wf:text-color="@wf:color/primary"
                wf:font-weight="700">
                <wf:time-text wf:pattern="HH:mm" />
            </wf:text>

            <wf:text
                wf:id="date"
                wf:x="0.5"
                wf:y="0.36"
                wf:anchor="center"
                wf:text-size="20sp"
                wf:text-color="@wf:color/onSurfaceMuted">
                <wf:time-text wf:pattern="EEE, dd MMM" />
            </wf:text>

            <wf:text
                wf:id="soldierLabel"
                wf:x="0.08"
                wf:y="0.08"
                wf:anchor="start"
                wf:text-color="@wf:color/onSurfaceMuted"
                wf:text-size="14sp">
                <wf:constant-text wf:value="Soldado" />
            </wf:text>

            <wf:text
                wf:id="soldierValue"
                wf:x="0.08"
                wf:y="0.14"
                wf:anchor="start"
                wf:text-color="@wf:color/onSurface"
                wf:text-size="20sp"
                wf:font-weight="700">
                <wf:constant-text wf:value="A. Valiente" />
            </wf:text>

            <wf:text
                wf:id="rankLabel"
                wf:x="0.08"
                wf:y="0.20"
                wf:anchor="start"
                wf:text-color="@wf:color/onSurfaceMuted"
                wf:text-size="14sp">
                <wf:constant-text wf:value="Rango" />
            </wf:text>

            <wf:text
                wf:id="rankValue"
                wf:x="0.08"
                wf:y="0.26"
                wf:anchor="start"
                wf:text-color="@wf:color/onSurface"
                wf:text-size="18sp"
                wf:font-weight="600">
                <wf:constant-text wf:value="Caballero" />
            </wf:text>

            <wf:box
                wf:id="battery"
                wf:x="0.08"
                wf:y="0.82"
                wf:width="0.38"
                wf:height="0.07"
                wf:anchor="start">
                <wf:text
                    wf:id="batteryLabel"
                    wf:x="0.0"
                    wf:y="0.0"
                    wf:anchor="start"
                    wf:text-color="@wf:color/onSurfaceMuted"
                    wf:text-size="14sp">
                    <wf:constant-text wf:value="BaterÃ­a" />
                </wf:text>
                <wf:progress-bar
                    wf:id="batteryBar"
                    wf:x="0.0"
                    wf:y="0.5"
                    wf:anchor="start"
                    wf:width="1.0"
                    wf:height="0.4"
                    wf:track-color="@wf:color/surface"
                    wf:indicator-color="@wf:color/primary">
                    <wf:battery-percentage />
                </wf:progress-bar>
            </wf:box>

            <wf:box
                wf:id="steps"
                wf:x="0.54"
                wf:y="0.82"
                wf:width="0.38"
                wf:height="0.07"
                wf:anchor="start">
                <wf:text
                    wf:id="stepsLabel"
                    wf:x="0.0"
                    wf:y="0.0"
                    wf:anchor="start"
                    wf:text-color="@wf:color/onSurfaceMuted"
                    wf:text-size="14sp">
                    <wf:constant-text wf:value="Pasos" />
                </wf:text>
                <wf:progress-bar
                    wf:id="stepsBar"
                    wf:x="0.0"
                    wf:y="0.5"
                    wf:anchor="start"
                    wf:width="1.0"
                    wf:height="0.4"
                    wf:track-color="@wf:color/surface"
                    wf:indicator-color="@wf:color/accent">
                    <wf:goal-progress wf:data-source="steps" wf:daily-goal="10000" />
                </wf:progress-bar>
            </wf:box>
        </wf:box>
    </wf:layout>
</wf:watch-face>

